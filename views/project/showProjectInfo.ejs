<% include ../partials/headers %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"> <%= project.name %> </p>
                <div class="list-group">
                    <li class="list-group-item active"> About</li>
                    <li class="list-group-item"> Tech Stack</li>
                    <li class="list-group-item"> Project</li>
                </div>
        </div>

        <div class="aboutdiv">
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="image-responsive" src="<%= project.image %>">
                    <div class="caption-full">
                        <p> <%= project.description %></p>
                    </div>
                </div>
                <div class="well">
                    <% if( currentLoggedIn != "admin") { %>
                        <div class="text-right">
                            <a class="btn btn-info" href="/resume/<%= project._id %>/comments/new">Add Comment</a>
                        </div>
                    <% }else{ %>
                        <div class="text-right">
                            <a class="btn btn-info" href="/resume/<%= project._id %>/comments/new">Add Comment</a>
                        </div>
                        <div class="text-right">
                            <form id="delete-form" action="/resume/<%= project._id %>?_method=DELETE" method="POST">
                                <button style="margin-top:8px;" class="btn btn-info btn-danger">Delete</button>
                            </form>
                        </div>
                    <% } %>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <% project.comments.forEach(function(comment){ %>
                                <strong><%= comment.author.username %></strong>
                                <p>
                                    <%= comment.text %>
                                </p>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="techstackdiv hide">
          <div class="col-md-3 col-sm-6">
              <% project.techStacks.forEach(function(ts){ %>
                <img class="image-responsive" src="<%= ts.url %>">
              <% }) %>
          </div>
        </div>
        <div class="projectdiv hide">
            Threesdfsdf
        </div>




    </div>
    <script>
        //toggles menu selector
        $(function(){
            $('.list-group-item').click(function(e) {
                e.preventDefault()
                $(this).parent().find('li').removeClass('active');
                $(this).addClass('active');
                if($(this).text()==" About"){
                    $(".aboutdiv").removeClass("hide");
                    $(".techstackdiv").addClass("hide");
                    $(".projectdiv").addClass("hide");

                }else if(($(this).text()==" Tech Stack")){
                    $(".techstackdiv").removeClass("hide");
                    $(".aboutdiv").addClass("hide");
                    $(".projectdiv").addClass("hide");
                }else{
                    $(".projectdiv").removeClass("hide");
                    $(".aboutdiv").addClass("hide");
                    $(".techstackdiv").addClass("hide");
                }
            });
        })
    </script>
</div>

<% include ../partials/footer %>
