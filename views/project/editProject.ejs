<% include ../partials/headers %>
<div class="container">
    <div class="row">
        <h1 class="formheader">Edit Project</h1>
        <div class="maininputform">
            <form action="/resume/<%= project._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="editName" value="<%= project.name %>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editImage" value="<%= project.image %>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editDescript" value="<%= project.description %>">    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form> 
            <a href="/resume">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>